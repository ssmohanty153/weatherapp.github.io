<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerLinks}}
</head>

<body>
    {{>navbar}}

    <div class="container-fluid main_header">
        <div class="row">
            <diV class="col-md-10 col-12 mx-auto">

                <div class="main_container">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="enter your city name" autocomplete="off">
                        <input type="submit" value="search" id="submitButton">

                    </form>

                </div>
                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Thursday</p>
                        <p id="today_date"></p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">get out put here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_value">0</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    {{>footer}}
    <script src="js/main.js"> </script>
    <script>

        const getCurrentDay = () => {
            var weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tue";
            weekday[3] = "Wed";
            weekday[4] = "Thursday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday";
            let day = document.getElementById('day');
            let currentTime = new Date();
            let days = weekday[currentTime.getDay()];
            day.innerText = days;
        };
        getCurrentDay();


        const getCurrentTime = () => {
            var months = [
                "Jan",
                "Feb",
                "Mar",
                "Apr",
                "May",
                "June",
                "July",
                "Aug",
                "Sept",
                "Oct",
                "Nov",
                "Dec",
            ];

            var now = new Date();
            var month = months[now.getMonth()];
            var date = now.getDate();



            let today_date = document.getElementById("today_date");

            today_date.innerHTML = `${month} ${date}`;
        };
        getCurrentTime();
    </script>

</body>

</html>